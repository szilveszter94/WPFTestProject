<UserControl x:Class="Content.Views.LeftSideView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="7*"/>
        </Grid.RowDefinitions>

        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18" Grid.Row="0" Text="{Binding Date}" />
        <Image Grid.Row="1" Source="/Images/smile.png" Height="200" Visibility="{Binding ImageVisibility}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</UserControl>
